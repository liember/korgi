<div>
  <h2><%= @title %></h2>

  <.form
    let={f}
    for={@changeset}
    id="sensor-form"
    phx-target={@myself}
    phx-change="validate"
    phx-submit="save">

    <%= label f, :name %>
    <%= text_input f, :name %>
    <%= error_tag f, :name %>

    <%= label f, :topic %>
    <%= text_input f, :topic %>
    <%= error_tag f, :topic %>

    <div>
      <%= submit "Save", phx_disable_with: "Saving..." %>
    </div>
  </.form>
</div>
